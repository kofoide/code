	<CodeSnippet Format="1.0.0">
	<Header>
	<Title>Drop/Create View</Title>
        <Shortcut></Shortcut>
	<Description>Drops a view.</Description>
	<Author>Eric Kofoid</Author>
	<SnippetTypes>
		<SnippetType>Expansion</SnippetType>
	</SnippetTypes>
	</Header>
	<Snippet>
		<Declarations>
			<Literal>
				<ID>SchemaName</ID>
				<ToolTip>Name of the schema</ToolTip>
				<Default>dbo</Default>
			</Literal>
			<Literal>
				<ID>ViewName</ID>
				<ToolTip>Name of the view</ToolTip>
				<Default>ViewName</Default>
			</Literal>
		</Declarations>
		<Code Language="SQL">
			<![CDATA[IF OBJECT_ID(N'$SchemaName$.$ViewName$', N'V') IS NOT NULL
  DROP VIEW $SchemaName$.$ViewName$
GO

CREATE VIEW $SchemaName$.$ViewName$
AS

$end$]]>
		</Code>
	</Snippet>
	</CodeSnippet>
</CodeSnippets>